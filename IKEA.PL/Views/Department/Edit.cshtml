@model UpdatedDepartmentDto
@{
    ViewData["Title"] = "Edit Department";
}

<div class="row justify-content-center align-content-center flex-column">
    <h1 class="col-6 my-4">Edit Deaprtment : @Model.Name</h1>
    <form asp-action="Edit" method="post" class="col-6">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Code"></label>
			<input class="form-control" asp-for="Code" />
			<span class="text-danger" asp-validation-for="Code"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Name"></label>
			<input class="form-control" asp-for="Name" />
			<span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Description"></label>
			<textarea class="form-control" asp-for="Description"></textarea>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="CreationDate"></label>
			<input class="form-control" type="date" asp-for="CreationDate"/></span>
        </div>
        <div>
            <input type="submit" value="Update" class="btn btn-success" />
			<a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
