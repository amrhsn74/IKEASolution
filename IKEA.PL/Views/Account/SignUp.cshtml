@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SignUp" method="post">
			<input class="text" style="margin-bottom:10px" asp-for="FirstName" placeholder="Firstname" required="">
			<input class="text" style="margin-bottom:10px" asp-for="LastName" placeholder="Lastname" required="">
			<input class="text" style="margin-bottom:10px" asp-for="UserName" placeholder="Username" required="">

			<input class="text email" style="margin-bottom:10px" type="email" asp-for="Email" placeholder="Email" required="">
			<input class="text" style="margin-bottom:10px" type="password" asp-for="Password" placeholder="Password" required="">
			<input class="text" style="margin-bottom:10px" type="password" asp-for="ConfirmPassword" placeholder="ConfirmPassword" required="">

			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" class="checkbox" asp-for="IsAgreed" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<div asp-validation-summary="All"></div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Do you have an Account? <a href="/Account/Login"> Login Now!</a></p>
	</div>
</div>

